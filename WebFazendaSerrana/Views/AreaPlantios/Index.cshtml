@model IEnumerable<WebFazendaSerrana.Models.AreaPlantio>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tamanho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cultura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tamanho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cultura.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Numero">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Numero">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Numero">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



