@model WebFazendaSerrana.ViewModel.CulturaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Cultura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoMaximo" class="control-label"></label>
                <input asp-for="TempoMaximo" class="form-control" />
                <span asp-validation-for="TempoMaximo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MesIdeal" class="control-label"></label>
                <input asp-for="MesIdeal" class="form-control" />
                <span asp-validation-for="MesIdeal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MesFinal" class="control-label"></label>
                <input asp-for="MesFinal" class="form-control" />
                <span asp-validation-for="MesFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<h4>Pragas Incidentes</h4>

<table class="table" width="100%">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                M
            </th>
            <th>
                Praga
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var pragas in Model.ListaDePragas) { 

            <tr>
                <td>


                    @{ if (pragas.Checked)
                        {
                            <input type="checkbox" checked="checked" name="fabricantesIds" value="@pragas.Praga.Codigo" />
                        }
                        else
                        {
                            <input type="checkbox" name="fabricantesIds" value="@pragas.Praga.Codigo" />
                        }
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => @pragas.Praga.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pragas.Praga.NomePopular)
                </td>
                <td>
                </td>

            </tr>

        }
        
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
